{
  "name": "contracts",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "prettier": "prettier --write 'src/**/*.sol'",
    "lint": "prettier --list-different 'src/**/*.sol'",
    "compile": "hardhat compile",
    "coverage": "hardhat coverage",
    "clear": "rm -rf coverage typechain-types deployments cache artifacts coverage.json",
    "clear:all": "rm -rf node_modules deployments coverage typechain-types cache artifacts coverage.json",
    "chain:local": "hardhat node",
    "test:local": "hardhat --network localhost test",
    "deploy:local": "hardhat --network localhost deploy",
    "deploy-verify:test": "hardhat --network testnet deploy && hardhat --network testnet etherscan-verify",
    "deploy-verify:main": "hardhat --network mainnet deploy && hardhat --network mainnet etherscan-verify"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.4.7",
    "@ethersproject/providers": "^5.4.7",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@openzeppelin/contracts": "^4.8.2",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.14.6",
    "chai": "^4.3.7",
    "chai-ethers": "^0.0.1",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "hardhat": "^2.13.0",
    "hardhat-deploy": "^0.11.24",
    "hardhat-gas-reporter": "^1.0.9",
    "mocha": "^10.2.0",
    "prettier": "^2.8.4",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.4.1",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.2",
    "ts-node": ">=8.0.0",
    "typechain": "^8.1.0",
    "typescript": ">=4.5.0"
  }
}
